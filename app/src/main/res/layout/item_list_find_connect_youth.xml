<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dim3"
        android:background="@drawable/rectangle_without_stroke"
        android:orientation="vertical"
        android:padding="@dimen/dim10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgProfileImage"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@drawable/profile_pic"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imgProfileImage_txt"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle"
                            android:visibility="visible" />

                        <ProgressBar
                            android:id="@+id/imgProfileImageProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone" />
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:id="@+id/removeProfilePicture"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/contact_msg" />


                <View
                    android:id="@+id/ViewUpload"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/unfollow" />


            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim5"
                android:layout_marginTop="@dimen/dim5"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="14sp"
                    tools:text="Michael Wright sdfsdfasdfasdf" />

                <TextView
                    android:id="@+id/tvWorker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dim5"
                    android:fontFamily="@font/montserrat_light"
                    tools:text="Retail worker" />

                <TextView
                    android:id="@+id/txtType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim5"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_light"
                    android:gravity="center"
                    android:maxLines="3"
                    android:textSize="14sp"
                    tools:text="Type" />

                <TextView
                    android:id="@+id/txtRegion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim5"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_light"
                    android:gravity="center"
                    android:maxLines="3"
                    android:textColor="#DE000000"
                    android:textSize="14sp"
                    tools:text="regions" />

                <TextView
                    android:id="@+id/txtAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim5"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_light"
                    android:gravity="center"
                    android:maxLines="3"
                    android:textSize="12sp"
                    tools:text="@string/large_text" />


                <TextView
                    android:id="@+id/txtTags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dim5"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/medium_level_blue"
                    tools:text="Retail worker" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_without_stroke"
            android:gravity="center"
            android:orientation="vertical"

            android:visibility="gone">

            <TextView
                android:id="@+id/txtShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_color_blue"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="top"
                android:padding="10dip"
                android:text="Share"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
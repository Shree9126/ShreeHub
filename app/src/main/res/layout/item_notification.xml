<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/rectangle_without_stroke"
    android:layout_margin="@dimen/dim5"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dim10">


    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic" />

        <ProgressBar
            android:id="@+id/imgJobLists_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dim10">


        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/large_text"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim5"
            android:fontFamily="@font/montserrat_light"
            android:text="06.April 2017 11:38"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="9sp" />
    </LinearLayout>


</LinearLayout>

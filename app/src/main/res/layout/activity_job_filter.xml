<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.mindnotix.youthhub.JobFilterActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Jobs filter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@drawable/rectangle_without_stroke"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtjosss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="start"
            android:padding="4dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Browse jobs"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txtjosss"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:padding="4dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="end"
            android:text="Reset" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/rectangle_without_stroke"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Search"
                    android:textColor="#DE000000" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/edtJobSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:inputType="text"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Job category"
                    android:textColor="#DE000000" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spnrJobCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/district_array"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Job sub category"
                    android:textColor="#DE000000" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spnrJobSubCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/district_array"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Job type"
                    android:textColor="#DE000000" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
              >

                <Spinner
                    android:id="@+id/spnrJobTypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/district_array"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Region / Location"
                    android:textColor="#DE000000" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spnrRegionLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/district_array"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="District / City"
                    android:textColor="#DE000000" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spnrDistrictCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/district_array"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Salary range"
                    android:textColor="#DE000000" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spnrSalaryRangeType"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_height="wrap_content"
                    android:entries="@array/district_array" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="From"
                            android:textColor="#DE000000" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/rounded_edittext"
                        android:gravity="center"
                        android:layout_marginRight="4dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spnrFromSalaryRange"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/district_array"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="12sp" />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="To"
                            android:textColor="#DE000000" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/rounded_edittext"
                        android:gravity="center"
                        android:layout_marginLeft="4dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spnrToSalaryRange"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/district_array"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="14sp" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Sort by"
                    android:textColor="#DE000000" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"

                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:orientation="horizontal">


                <Spinner
                    android:id="@+id/spnrSortByDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/district_array"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"

                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:orientation="horizontal">


                <CheckBox
                    android:id="@+id/chkFavorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/district_array"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Favourite"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/dim5"
    android:background="@color/background_color"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/addnewproject"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardElevation="@dimen/dim3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dim10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Add new projects"
                    android:textSize="@dimen/dim15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dim20">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:text="+Add"
                    android:textColor="@color/medium_level_blue"
                    android:textSize="@dimen/dim15" />
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/yourProfileprojectList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim10"
        app:layout_constraintTop_toBottomOf="@+id/addnewproject" />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/CoverPicture"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:tint="#3F000000"
                    android:scaleType="centerCrop" />

                <ProgressBar
                    android:id="@+id/CoverProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="?android:attr/progressBarStyleSmall"
                    android:visibility="visible" />


                <ImageView
                    android:id="@+id/cameraIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center|end"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_camera" />


            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dim20">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/montserrat_light"
                            android:text="Followers"
                            android:textColor="@android:color/primary_text_light" />

                        <TextView
                            android:id="@+id/tvFollwers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="#DE000000"
                            android:gravity="top"
                            android:layout_marginTop="-6dp"
                            tools:text="08"
                            android:textSize="@dimen/dim30" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="end|center"
                        android:orientation="vertical"
                        android:paddingRight="@dimen/dim20">

                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey_black_1000"
                            android:text="Following" />

                        <TextView
                            android:id="@+id/tvFollwing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-6dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="#DE000000"
                            tools:text="20 "
                            android:textSize="@dimen/dim30" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        tools:text="Michael Wright"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="#DE000000" />

                    <TextView
                        android:id="@+id/tvWorker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:singleLine="true"
                        android:fontFamily="@font/montserrat_light"
                        tools:text="Retail worker" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Add Video Intro"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/medium_level_blue" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:src="@drawable/profile_pic"
            android:visibility="gone"
            app:civ_border_color="@color/white"
            app:civ_border_width="5dp" />

        <ImageView
            android:id="@+id/profile_image1"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:background="@drawable/circle"
            android:layout_gravity="center"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/imageUploadProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleSmall"
            android:visibility="visible" />

        <View
            android:id="@+id/removeProfilePicture"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginRight="45dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_close" />


        <View
            android:id="@+id/ViewUpload"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_upload" />


    </FrameLayout>

</LinearLayout>
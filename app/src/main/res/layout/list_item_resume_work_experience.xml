<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="vertical"
        android:paddingBottom="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_without_stroke"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:singleLine="true"
                        android:textColor="@android:color/primary_text_light"
                        tools:text="Title" />


                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/rectangle_without_stroke"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp">


                        <TextView
                            android:id="@+id/tvStartDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@android:color/primary_text_light"
                            tools:text="Start date" />


                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tvHypen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@android:color/primary_text_light"
                            android:textSize="12sp"
                            tools:text="-" />

                        <TextView

                        android:id="@+id/tvEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@android:color/primary_text_light"
                        tools:text="end Date" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_without_stroke"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tvEmployeeName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@android:color/primary_text_light"
                            tools:text="EmployerName" />


                        <TextView
                            android:id="@+id/tvEmployeeage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@android:color/primary_text_light"
                            android:textSize="12sp"
                            tools:text="5m 3m" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvWorkIndustry"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@android:color/primary_text_light"
                            tools:text="EmployerName" />


                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/left_arrow"
                            android:tint="@color/black" />


                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/tvSubWorkIndustry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:singleLine="true"
                            android:textColor="@android:color/primary_text_light"
                            tools:text="Sub work Industry" />


                    </LinearLayout>


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/deleteView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_delete_black_24dp"
                                android:tint="@color/medium_level_blue" />


                            <TextView
                                android:id="@+id/tvDelete"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:text="Delete"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/medium_level_blue"
                                android:textSize="12sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/editView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_edit_interface_symbol"
                                android:tint="@color/medium_level_blue" />

                            <TextView
                                android:id="@+id/tvEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:text="Edit"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/medium_level_blue"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="12sp"
                        tools:text="employer description" />


                    <TextView
                        android:id="@+id/keyResponsibiltites"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Key Responsibilties / Achievements"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="12sp" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/keyResponsinbiltesrecylerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    </android.support.v7.widget.RecyclerView>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

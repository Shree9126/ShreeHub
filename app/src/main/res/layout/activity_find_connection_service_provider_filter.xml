<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.mindnotix.youthhub.JobFilterActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Service Provider filter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/rectangle_without_stroke"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/txtjosss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="start"
            android:fontFamily="@font/montserrat_medium"
            android:padding="4dp"
            android:text="Browse Youth"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txtjosss"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="end"
            android:padding="4dp"
            android:text="Reset" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/rectangle_without_stroke"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Search"
                    android:textColor="#DE000000" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/edtJobSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:inputType="text"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Region / Location"
                    android:textColor="#DE000000" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearSpnrRegion"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_spnrRegion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="start|center"
                    android:hint="All"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dim15"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="15sp" />


                <ImageView

                    android:layout_width="12sp"
                    android:layout_height="12sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="13dp"
                    android:src="@drawable/drop_down" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="District / City"
                    android:textColor="#DE000000" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearSpnrDistrict"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_spnrDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="start|center"
                    android:hint="All"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dim15"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="15sp" />


                <ImageView

                    android:layout_width="12sp"
                    android:layout_height="12sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="13dp"
                    android:src="@drawable/drop_down" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Serivce Type"
                    android:textColor="#DE000000" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearSpnrServiceType"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_spnrServiceType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="start|center"
                    android:hint="All"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dim15"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="15sp" />


                <ImageView

                    android:layout_width="12sp"
                    android:layout_height="12sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="13dp"
                    android:src="@drawable/drop_down" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearTagName"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Tags"
                    android:textColor="#DE000000" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearSpnrTags"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_spnrTags"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="start|center"
                    android:hint="All"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dim15"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="15sp" />


                <ImageView

                    android:layout_width="12sp"
                    android:layout_height="12sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="13dp"
                    android:src="@drawable/drop_down" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
